@model BankingApp.Entities.AccountInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <div class="card shadow m-auto mt-5">
                <div class="card-header bg-warning bg-gradient d-flex">
                    <div class="flex-grow-1">
                        <h2 class="text-dark text-center">Add New Product</h2>
                    </div>
                    <div>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" />
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Type" class="control-label">Account Type</label>
                                <select asp-for="Type" class="form-select">
                                    <option value="Savings">Savings</option>
                                    <option value="Current">Current</option>
                                </select>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Balance" class="control-label"></label>
                                <input asp-for="Balance" class="form-control" />
                                <span asp-validation-for="Balance" class="text-danger"></span>
                            </div>
                            <div class="form-group text-end mt-3">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a href="/accounts/list" class="btn btn-secondary">Back to list</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

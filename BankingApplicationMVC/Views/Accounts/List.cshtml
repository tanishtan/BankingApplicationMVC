@model IEnumerable<BankingApp.Entities.AccountInfo>

@{
    ViewData["Title"] = "List";
}

<div class="container">
    @* Tag Helper - new tag that is supported from ASP.NET 3.1 onwards*@
    @* <partial name="CustomerHeader.cshtml" /> *@
    <div class="row">
        <div class="col-10 offset-1">
            <div class="card shadow m-auto mt-5">
                <div class="card-header bg-warning bg-gradient opacity-75 d-flex">
                    <div class="flex-grow-1">
                        <h2 class="text-dark text-center">Account List</h2>
                    </div>
                    <a href="/accounts/addnew" class="btn btn-outline-dark">Add New</a>
                </div>
                <div class="card-body">
                    <table class="table table-danger table-hover table-striped">
                        <thead><tr><th>Account Id</th><th>Customer Name</th><th>Account Type</th><th>Balance</th><th></th></tr></thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Type</td>
                                    <td>@item.Balance</td>
                                    <td>
                                        @*Route: href -> /customers/details/1*@
                                        <a asp-controller="Accounts" asp-action="Details"
                                           asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View</a>

                                        @Html.ActionLink(
                                                 linkText: "Modify",
                                                 actionName: "Edit",
                                                 controllerName: "Accounts",
                                                 routeValues: new { id = item.Id },
                                                 htmlAttributes: new { @class = "btn btn-sm btn-outline-dark" }
                                                 )
                                        <a asp-controller="Accounts" asp-action="Remove"
                                           asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Remove</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

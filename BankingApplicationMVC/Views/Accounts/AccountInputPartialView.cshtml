@model BankingApp.Entities.AccountInfo

<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type">Select Account Type</label>
        <select asp-for="Type" class="form-select">
            <option value="Savings">Savings</option>
            <option value="Current">Current</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    <div class="form-group text-end  mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="/accounts/list" class="btn btn-secondary">Back to list</a>
    </div>
</div>
